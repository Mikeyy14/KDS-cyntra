<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232323"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/ty_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/poppins_extrabold"
                    android:singleLine="true"
                    android:text="@string/invoice_receipt"
                    android:textColor="@color/white"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="@dimen/_16ssp"/>
                <LinearLayout
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4sdp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/icon_cross_24"
                        app:tint="@color/white" />

                </LinearLayout>



            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_print_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/whatsapp_receipt"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:padding="@dimen/_18sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/rate_background"

                        >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/sms" />

                        <TextView
                            android:id="@+id/txt_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/sms"
                            android:fontFamily="@font/poppins_regular"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:id="@+id/print_receipt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">
                   <LinearLayout
                       android:padding="@dimen/_18sdp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                        android:gravity="center"
                       android:orientation="vertical"
                        android:background="@drawable/rate_background"

                        >
                    <ImageView
                        android:id="@+id/cash"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/icon_printer"
                        app:tint="@color/white" />

                       <TextView
                           android:id="@+id/txt_loyalty"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/poppins_regular"
                           android:gravity="center"
                           android:text="@string/print"
                           android:textColor="@color/white"
                           android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                           android:textSize="@dimen/_14ssp" />
                   </LinearLayout>


                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext"
                android:padding="@dimen/_2sdp"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:focusableInTouchMode="true"
                    android:text="@string/_9999999999"
                    android:background="@color/white"
                    android:hint="@string/please_enter_your_mobile_no"
                    android:singleLine="true"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="TextFields" />

            </LinearLayout>

                <TextView
                    android:id="@+id/phone_ok_button"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center"
                    android:background="@drawable/background_button_print_dialog"
                    android:padding="@dimen/_2sdp"
                    android:text="@string/ok"
                    android:textAllCaps="true"
                    android:textColor="@drawable/button_selector"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>


