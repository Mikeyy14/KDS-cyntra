<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_help_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginEnd="@dimen/_15sdp"
        android:text="10"
        android:gravity="center"
        style="@style/textMediumBold"
        android:textColor="@color/black"
        android:background="@drawable/background_circle_shape_white_color"
        android:layout_marginBottom="@dimen/_15sdp" />


    <TextView
        android:id="@+id/tv_need_help"
        style="@style/textLargeBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/need_help" />


    <ImageView
        android:id="@+id/close_dialog_help"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:src="@drawable/icon_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tv_need_help"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog_grey"
            android:gravity="center"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            >



            <ImageView
                android:id="@+id/iv_home_mic_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/img_help_pair"
                android:layout_marginTop="@dimen/_25sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textMediumRegular"
                android:text="@string/speak_when_the_icon_turns_red"
                android:layout_below="@+id/iv_home_mic_1"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/_17sdp"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog_grey"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            >

            <ImageView
                android:id="@+id/iv_no_mic"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/mute_icon"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/_25sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textMediumRegular"
                android:text="@string/help_description_error"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_17sdp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog_grey"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            >


            <ImageView
                android:id="@+id/iv_yellow_mic"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/voice_error"
                android:layout_marginTop="@dimen/_25sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textMediumRegular"
                android:text="@string/help_description_technical_error"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_17sdp"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_call_assistant"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:gravity="center"
        style="@style/whiteBgmRedTextContainedButton"
        android:stateListAnimator="@null"
        android:text="@string/calling_assistant"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/red_bright"
        />


</RelativeLayout>